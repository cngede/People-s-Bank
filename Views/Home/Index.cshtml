@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <h1 class="display-4">PBL</h1>
    <p class="lead">People's Bank of Louisville - your number one friendly bank to carter to your banking needs.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<h3>Login</h3>

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <div class="container">
        <div class="row form-horizontal">
            <div class="form-group">
                <div class="col-md-1">@Html.Label("Username")</div>
                <div class="col-md-3">
                    @Html.TextBox("Username", null, new { @class = "form-control", autocomplete = "off" })
                    
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-1">@Html.Label("Password")</div>
                <div class="col-md-3">
                    @Html.TextBox("Password", null, new { @class = "form-control", autocomplete = "off" })
                   

                </div>
            </div>
            <div class="form-group">
                <div class="col-md-1"><input type="submit" value="Log In" class="btn btn-primary" /></div>
                <div class="col-md-3"><a href="@Url.Action("Register", "Home")" class="btn btn-default">Register</a></div>
            </div>
        </div>
    </div>

    <span class="resp-info"></span>
}

@if (ViewBag.attempt != null)
{
    @ViewBag.attempt
}
